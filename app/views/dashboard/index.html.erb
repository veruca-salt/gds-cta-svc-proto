		    <tr>
		      <th>Acronymn</th>
		      <th>Name</th>
		      <th colspan="2"></th>
		    </tr>
		  </thead>

		  <tbody>
		    <% @top_ten_results.each do |system| %>
		      <tr>
		        <td><%= system.acronymn %></td>
		        <td><%= system.name %></td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>

