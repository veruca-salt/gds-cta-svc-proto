<p id="notice"><%= notice %></p>

<h1>Agencies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @agencies.each do |agency| %>
      <tr>
        <td><%= agency.name %></td>
        <td><%= link_to 'Show', agency, class: 'govuk-link govuk-link--no-visited-state' %></td>
        <td><%= link_to 'Edit', edit_agency_path(agency), class: 'govuk-link govuk-link--no-visited-state' %></td>
        <td><%= link_to 'Destroy', agency, method: :delete, data: { confirm: 'Are you sure?' }, class: 'govuk-link govuk-link--no-visited-state' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Return to dashboard', root_path, class: 'govuk-link govuk-link--no-visited-state' %>