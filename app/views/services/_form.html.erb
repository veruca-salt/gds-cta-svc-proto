<%= form_with(model: service, local: true) do |form| %>
  <% if service.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(service.errors.count, "error") %> prohibited this service from being saved:</h2>

      <ul>
      <% service.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, class: "govuk-label" %>
    <%= form.text_field :name, class: "govuk-input govuk-input--width-20" %>
  </div>

  <div class="field">
    <%= form.label :department_id, class: "govuk-label" %>
    <%= form.collection_select(:department_id, Department.all, :id, :description, {prompt: "Select a department"}, {class: "govuk-select"}) %>
  </div>

  <div class="field" id="program_select_div">
    <%= form.label :program_id, class: "govuk-label" %>
    <%= form.collection_select(:program_id, Program.all, :id, :name, {include_blank: "Select/remove a program"}, {class: "govuk-select"}) %>
    <div class="govuk-button" id="toggle_new_program">Add New Program</div>
  </div>

  <div class="field" id="program_text_div">
    <%= form.label :program_id, class: "govuk-label" %>
    <%= form.text_field :program_name, class: "govuk-input govuk-input--width-10" %>
    <div class="govuk-button" id="toggle_existing_program">Select Existing Program</div>
  </div>

  <div class="field" id="agency_select_div">
    <%= form.label :agency_id, class: "govuk-label" %>
    <%= form.collection_select(:agency_id, Agency.all, :id, :name, {include_blank: "Select/remove an agency"}, {class: "govuk-select"}) %>
    <div class="govuk-button" id="toggle_new_agency">Add New Agency</div>
  </div>

  <div class="field" id="agency_text_div">
    <%= form.label :agency_id, class: "govuk-label" %>
    <%= form.text_field :agency_name, class: "govuk-input govuk-input--width-10" %>
    <div class="govuk-button" id="toggle_existing_agency">Select Existing Agency</div>
  </div>


  <div class="actions">
    <%= form.submit class: "govuk-button" %>
  </div>

<% end %>
